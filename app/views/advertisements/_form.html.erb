<%= form_for(@advertisement) do |f| %>


	<div class="field">
		<%= f.label :Imię %><br>
		<%= f.text_field :first_name %>
	</div>
	<div class="field">
		<%= f.label :Nazwisko %><br>
		<%= f.text_field :last_name %>
	</div>
	<div class="field">
		<%= f.label :Email %><br>
		<%= f.text_field :email %>
	</div>
	<div class="field">
		<%= f.label :Numer_telefonu %><br>
		<%= f.text_field :phone_number %>
	</div>
	<div class="field">
		<%= f.label :Miejscowość %><br>
		<%= f.text_field :town %>
	</div>
	<div class="field">
		<%= f.label :Typ_kursu %><br>
		<%= f.text_field :curse_type %>
	</div>
	<div class="field">
		<%= f.label :Cena %><br>
		<%= f.text_field :price %>
	</div>
	<div class="field">
		<%= f.label :Napisz_coś_o_sobie %><br>
		<%= f.text_field :bio %>
	</div>

	<div class="actions">
		<%= f.submit %>
	</div>
<% end %>